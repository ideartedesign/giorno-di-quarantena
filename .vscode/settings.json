{
    // ESLint
    "eslint.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
        "extensions": [
            ".js",
            ".vue"
        ]
    },
    // Vue
    "vetur.format.styleInitialIndent": true,
    "vetur.format.defaultFormatter.js": "prettier-eslint",
    "vetur.format.defaultFormatter.ts": "prettier-tslint",
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "all",
    "prettier.printWidth": 120,
    "prettier.jsxSingleQuote": true,
    // Colors
    "workbench.colorCustomizations": {
        "activityBar.background": "#ffffff",
        "activityBar.activeBackground": "#ffffff",
        "activityBar.activeBorder": "#df9f9f",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#df9f9f",
        "activityBarBadge.foreground": "#15202b",
        "titleBar.activeBackground": "#f0f0f3",
        "titleBar.inactiveBackground": "#f0f0f399",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveForeground": "#15202b99",
        "statusBar.background": "#f0f0f3",
        "statusBarItem.hoverBackground": "#d4d4dc",
        "statusBar.foreground": "#15202b"
    },
    "peacock.color": "#f0f0f3",
    "markdownlint.ignore": [
        "CHANGELOG.md"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "cSpell.words": [
        "biquad",
        "compat",
        "coronavirus",
        "covid",
        "dasharray",
        "dashoffset",
        "datetime",
        "donerbeck",
        "featurequeries",
        "giornodiquarantena",
        "glslify",
        "instanceof",
        "iorestoacasa",
        "jsdelivr",
        "jsonld",
        "keypressed",
        "lauriers",
        "mousedragged",
        "mousemove",
        "mousemoved",
        "neomorphism",
        "nyquist",
        "onaudioprocess",
        "onupdate",
        "orbitcontrols",
        "playhead",
        "progressbar",
        "raycaster",
        "skeuomorphism",
        "uint",
        "valuemax",
        "valuemin",
        "valuenow",
        "webgl",
        "wireframe"
    ],
    "cSpell.ignoreWords": [
        "pmouse"
    ]
}
